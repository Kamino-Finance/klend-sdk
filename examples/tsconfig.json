{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "declaration": true,
    "allowJs": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false
  },
  "include": ["./**/*"],
  "exclude": ["dist", "node_modules", "kvault-tutorial"]
}
